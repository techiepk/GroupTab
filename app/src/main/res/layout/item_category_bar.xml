<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/spacing_small">

    <!-- Category header with icon and amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/category_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:text="ðŸ”" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/spacing_medium">

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food &amp; Dining"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/transaction_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 transactions"
                android:textSize="@dimen/text_size_small"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹5,432"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/percentage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35%"
                android:textSize="@dimen/text_size_small"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress bar showing percentage -->
    <ProgressBar
        android:id="@+id/percentage_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:max="100"
        android:progress="35"
        android:progressDrawable="@drawable/progress_bar_rounded" />

</LinearLayout>